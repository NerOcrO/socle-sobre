---
const { user } = Astro.locals
---

<header class="fr-header">
  <div class="fr-header__body">
    <div class="fr-container">
      <div class="fr-header__body-row">
        <div class="fr-header__brand fr-enlarge-link">
          <div class="fr-header__brand-top">
            <div class="fr-header__logo">
              <a
                href="/"
                title="Accueil - Nom de l’entité (ministère, secrétariat d‘état, gouvernement)"
              >
                <p class="fr-logo">
                  Intitulé
                  <br />officiel
                </p>
              </a>
            </div>
            <div class="fr-header__navbar">
              <button
                class="fr-btn--menu fr-btn"
                data-fr-opened="false"
                aria-controls="modal-491"
                id="button-492"
                title="Menu"
              >
                Menu
              </button>
            </div>
          </div>
          <div class="fr-header__service">
            <a
              href="/"
              title={`Accueil - ${
                user === undefined ? null : user.name
              } - Nom de l’entité (ministère, secrétariat d‘état, gouvernement)`}
            >
              <p class="fr-header__service-title">
                Bienvenue {user === undefined ? null : user.name} !
              </p>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div
    class="fr-header__menu fr-modal"
    id="modal-491"
    aria-labelledby="button-492"
  >
    <div class="fr-container">
      <button
        class="fr-btn--close fr-btn"
        aria-controls="modal-491"
        title="Fermer"
      >
        Fermer
      </button>
      <div class="fr-header__menu-links"></div>
      <nav class="fr-nav" id="navigation" aria-label="Menu principal">
        <ul class="fr-nav__list">
          <li class="fr-nav__item">
            <a class="fr-nav__link" href="image">
              Image
            </a>
          </li>
          <li class="fr-nav__item">
            <a data-astro-reload class="fr-nav__link" href="chartjs">
              Chart.js
            </a>
          </li>
          <li class="fr-nav__item">
            <a class="fr-nav__link" href="alpinejs">
              Alphine.js
            </a>
          </li>
          <li class="fr-nav__item">
            <a
              class="fr-nav__link"
              href="utilisateurs"
            >
              Utilisateurs
            </a>
          </li>
          {
            user === undefined
              ? null
              : (
              <li class="fr-nav__item">
                <a href="/logout" class="fr-btn fr-btn--secondary">
                  Se déconnecter
                </a>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </div>
</header>
